        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/disc_border" />
            <solid android:color="@color/transparent" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <solid android:color="@color/white_transparent_80" />
        </shape>
    </item>
</layer-list>