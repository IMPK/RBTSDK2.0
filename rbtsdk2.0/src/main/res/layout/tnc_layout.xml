<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:id="@+id/tnc_text_first"
        style="@style/App.TextView.tnc_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/tnc_first_text" />

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:id="@+id/tnc_text_second"
        style="@style/App.TextView.tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tnc_second_text" />
</LinearLayout>