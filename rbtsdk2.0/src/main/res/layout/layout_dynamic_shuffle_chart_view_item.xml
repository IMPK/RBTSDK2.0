<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_padding_half"
    android:paddingTop="@dimen/activity_padding_half">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.onmobile.rbt.baseline.util.customview.BoldTextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:paddingEnd="@dimen/track_child_margin"
            android:paddingStart="@dimen/track_child_margin"
            android:text="@string/dummy"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/btn_item_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/activity_padding_half"
            android:paddingEnd="@dimen/track_child_margin"
            android:paddingStart="@dimen/track_child_margin"
            android:paddingTop="@dimen/activity_padding_half"
            android:text="@string/see_all"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_shuffle_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

</LinearLayout>