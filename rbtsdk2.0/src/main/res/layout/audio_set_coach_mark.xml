        <FrameLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/circleOverlay"
            android:background="@color/coach_mark_bckground"></FrameLayout>

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="29dp"
            android:clickable="true"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/text_swipe_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="44dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:minLines="3"
            android:text="@string/coach_mark_audio_set_txt"
            android:textColor="@color/coach_mark_text_swipe_up"
            android:textSize="15sp" />


        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/text_tap_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_swipe_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/coach_mark_discover_dismiss_txt"
            android:textColor="@color/coach_mark_tap_dismiss"
