<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.onmobile.rbt.baseline.widget.CircleOverlayView
            android:id="@+id/circleOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/discover_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_tap_dismiss"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/audio_set_coachmark" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/discover_hand1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_tap_dismiss"
            android:layout_toEndOf="@+id/discover_hand"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/audio_set_coachmark" />

