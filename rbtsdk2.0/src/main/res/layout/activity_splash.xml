<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg">

    <ProgressBar
        android:id="@+id/splash_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="168dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/app_name_splash_loader_circle"/>

    <ImageView
        android:id="@+id/splash_ring_loader_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_ring_loader"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/operator_logo_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_operator_logo"/>

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/operator_logo_imageview"
        android:gravity="center"
        android:text="@string/splash_powered_by"
        android:textColor="@color/powered_by_color"
        android:textSize="9sp"/>


</RelativeLayout>