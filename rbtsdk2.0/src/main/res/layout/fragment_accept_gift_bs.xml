<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/accept_gift_bottom_sheet_height"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_sheet_accept_gift_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottom_sheet_content_margin"
        android:layout_marginEnd="@dimen/bottom_sheet_content_margin"
        android:layout_marginTop="0dp"
        android:clipToPadding="false"
        android:orientation="vertical">

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/accept_gift_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:textSize="@dimen/accept_gift_bottom_sheet_description_size"
            android:textColor="@color/black"
            android:text="@string/accept_gift_bottom_sheet_description"/>

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/tv_accept_gift"
            style="@style/App.TextView.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/accept_gift_bottom_sheet_accept_gift"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>