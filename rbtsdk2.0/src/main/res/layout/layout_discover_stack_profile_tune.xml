<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/stack_content_title_margin">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_tune_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="@dimen/fading_edge_recycler"
        android:requiresFadingEdge="vertical|horizontal"
        android:layout_marginBottom="@dimen/stack_recycler_margin_bottom" />

</RelativeLayout>
