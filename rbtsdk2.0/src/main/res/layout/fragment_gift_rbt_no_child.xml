<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/showcase_layout"
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:background="@drawable/gift_bg"
            android:layout_centerInParent="true"
            android:alpha="0.2"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_gift_96dp"/>

    </RelativeLayout>

    <com.onmobile.rbt.baseline.util.customview.MediumTextView
        android:id="@+id/gift_rbt_no_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showcase_layout"
        android:lines="2"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/gift_rbt_no_child_title"/>

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:id="@+id/gift_rbt_no_child_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gift_rbt_no_child_title"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/gift_rbt_no_child_description"/>


    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:id="@+id/tv_add_friends"
        style="@style/App.TextView.Button"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gift_rbt_no_child_description"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="@string/add_friends"
        android:textSize="13sp" />

</RelativeLayout>

