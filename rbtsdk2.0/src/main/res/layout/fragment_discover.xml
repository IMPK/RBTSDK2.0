<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/bg_gradient_trending"
        android:visibility="gone" />

    <View
        android:id="@+id/background_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/stack_layout_margin_top"
        android:clipToPadding="false"
        android:descendantFocusability="beforeDescendants"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/stack_layout_margin_bottom"
        android:paddingEnd="@dimen/stack_layout_margin_start_end"
        android:paddingStart="@dimen/stack_layout_margin_start_end" />


</RelativeLayout>

