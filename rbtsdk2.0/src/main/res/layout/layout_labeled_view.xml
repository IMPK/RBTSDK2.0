<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root_labeled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height_labeled"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_data_container_labeled"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/top_bottom_padding_labeled"
        android:paddingEnd="@dimen/start_end_padding_labeled"
        android:paddingStart="@dimen/start_end_padding_labeled"
        android:paddingTop="@dimen/top_bottom_padding_labeled">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.onmobile.rbt.baseline.util.customview.LightTextView
                android:id="@+id/tv_label_labeled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/anonymous"
                android:textSize="@dimen/txt_label_labeled_size"
                android:layout_alignParentStart="true"
                android:theme="@style/App.TextView.Multiline" />
        </RelativeLayout>

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/tv_value_labeled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="@string/anonymous"
            android:textSize="@dimen/txt_value_labeled_size"
            android:theme="@style/App.TextView.Multiline" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_labeled"
            style="@style/App.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider_labeled"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@color/divider" />

</LinearLayout>