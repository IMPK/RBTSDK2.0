<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:id="@+id/click_to_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/cg_sms_bottom_margin"
        android:includeFontPadding="false"
        android:text="@string/custom_cg_click_to_yes"
        android:textColor="@color/custom_cg_title"
        android:textSize="@dimen/cg_sms_click_to_yes"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/click_to_yes"
        android:orientation="horizontal">


        <Button
            android:id="@+id/no_btn"
            android:layout_width="@dimen/cg_sms_btn_width"
            android:layout_height="@dimen/cg_sms_btn_height"
            android:layout_weight="50"
            android:background="@color/custom_cg_no_btn"
            android:gravity="center"
            android:text="@string/cg_no"
            android:textColor="@color/white"
            android:textSize="@dimen/cg_sms_btn_size" />

        <View
            android:layout_width="8dp"
            android:layout_height="@dimen/cg_sms_btn_height"
            android:background="@null"></View>

        <Button
            android:id="@+id/yes_btn"
            android:layout_width="@dimen/cg_sms_btn_width"
            android:layout_height="@dimen/cg_sms_btn_height"
            android:layout_weight="50"
            android:background="@color/custom_cg_yes_btn"
            android:gravity="center"
            android:text="@string/cg_yes"
            android:textColor="@color/white"
            android:textSize="@dimen/cg_sms_btn_size" />

    </LinearLayout>

</RelativeLayout>