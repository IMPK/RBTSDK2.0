<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snackBar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_content_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.onmobile.rbt.baseline.activities.SpeechRecognizerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_speech_recognizer_mic_bg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mic_white_24dp" />
        </FrameLayout>

        <com.onmobile.rbt.baseline.util.customview.RegularTextView
            android:id="@+id/tv_speech_recognizer_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/speech_recognizer_ready"
            android:textColor="@color/speech_recognizer_text_indicator"
            android:textSize="@dimen/speech_recognizer_text_indicator"
            android:theme="@style/App.TextView.SingleLine" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>