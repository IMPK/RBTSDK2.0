<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_music_shuffle_shuffle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/stack_content_title_margin">

    <!--<FrameLayout
        android:id="@+id/layout_music_shuffle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->
    <!--<fragment
        android:id="@+id/layout_music_shuffle"
        class="com.onmobile.rbt.baseline.fragment.FragmentMusicShuffle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_music_shuffle_shuffle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fadingEdgeLength="@dimen/fading_edge_recycler"
        android:requiresFadingEdge="vertical|horizontal" />

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:id="@+id/tv_music_shuffle_create_own"
        style="@style/App.TextView.Button.Border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stack_recycler_margin_bottom"
        android:minWidth="@dimen/app_button_large_width"
        android:minHeight="@dimen/app_button_large_height"
        android:text="@string/music_shuffle_create_btn"
        android:textColor="?attr/colorAccent"
        android:visibility="visible" />

</LinearLayout>
