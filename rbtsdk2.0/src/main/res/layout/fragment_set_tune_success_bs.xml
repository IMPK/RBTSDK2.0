<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center"
    android:minHeight="@dimen/bottom_sheet_set_tune_min_height"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">

    <FrameLayout
        android:id="@+id/showcase_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin" />

    <com.onmobile.rbt.baseline.util.customview.MediumTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/bottom_sheet_content_padding"
        android:paddingEnd="@dimen/bottom_sheet_content_padding"
        android:text="@string/congrats_title"
        android:textColor="@color/colorAccent"
        android:textSize="28sp" />

    <com.onmobile.rbt.baseline.util.customview.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="@dimen/bottom_sheet_content_padding"
        android:paddingEnd="@dimen/bottom_sheet_content_padding"
        android:text="@string/plans_purchase_success_message"
        android:textColor="@color/black"
        android:textSize="12sp" />
</LinearLayout>